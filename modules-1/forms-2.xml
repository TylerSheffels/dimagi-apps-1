<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:orx="http://openrosa.org/jr/xforms" xmlns="http://www.w3.org/2002/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:vellum="http://commcarehq.org/xforms/vellum">
	<h:head>
		<h:title>Flag Patient &amp; Add Notes</h:title>
		<model>
			<instance>
				<data xmlns:jrm="http://dev.commcarehq.org/jr/xforms" xmlns="http://openrosa.org/formdesigner/19987B7C-76CE-4996-A566-607EB6B94766" uiVersion="1" version="522" name="Flag Patient &amp; Add Notes">
					<flag_notes>
						<nurse_name/>
						<flag/>
						<patient_notes/>
						<remove_flag/>
					</flag_notes>
					<nurse_flag/>
				<case xmlns="http://commcarehq.org/case/transaction/v2" case_id="" date_modified="" user_id=""><update><nurse_flag/><patient_notes/></update></case><orx:meta xmlns:cc="http://commcarehq.org/xforms"><orx:deviceID/><orx:timeStart/><orx:timeEnd/><orx:username/><orx:userID/><orx:instanceID/><cc:appVersion/></orx:meta></data>
			</instance><instance id="commcaresession" src="jr://instance/session"/>
			<bind nodeset="/data/flag_notes"/>
			<bind nodeset="/data/flag_notes/nurse_name" type="xsd:string"/>
			<bind nodeset="/data/flag_notes/flag"/>
			<bind nodeset="/data/flag_notes/patient_notes" type="xsd:string"/>
			<bind nodeset="/data/flag_notes/remove_flag"/>
			<bind nodeset="/data/nurse_flag" calculate="if(selected(/data/flag_notes/flag, 'flag_yes'), 'yes', 'no')"/>
			<itext>
				<translation lang="en" default="">
					<text id="flag_notes-label">
						<value>Flag patient and add patient notes</value>
					</text>
					<text id="nurse_name-label">
						<value>Nurse Name:</value>
					</text>
					<text id="flag-label">
						<value>Click below to indicate that this patient needs closer monitoring.</value>
					</text>
					<text id="flag-flag_yes-label">
						<value>Flag this patient for closer monitoring</value>
					</text>
					<text id="patient_notes-label">
						<value>Patient Notes:</value>
					</text>
					<text id="flag_notes/remove_flag-label">
						<value>Click below to indicate that you would like to remove a flag previously placed on this patient.</value>
					</text>
					<text id="flag_notes/remove_flag-remove_flag_option-label">
						<value>Remove flag from this patient.</value>
					</text>
				</translation>
				<translation lang="hin">
					<text id="flag_notes-label">
						<value>Flag patient and add patient notes</value>
					</text>
					<text id="nurse_name-label">
						<value>&#2344;&#2352;&#2381;&#2360; &#2325;&#2366; &#2344;&#2366;&#2350;:
</value>
					</text>
					<text id="flag-label">
						<value>&#2311;&#2360; &#2350;&#2352;&#2368;&#2332; &#2325;&#2379; &#2309;&#2327;&#2352; &#2325;&#2352;&#2368;&#2348; &#2344;&#2367;&#2327;&#2352;&#2366;&#2344;&#2368; &#2325;&#2368; &#2332;&#2352;&#2370;&#2352;&#2340; &#2361;&#2376; &#2340;&#2379; &#2344;&#2368;&#2330;&#2375; &#2325;&#2381;&#2354;&#2367;&#2325; &#2325;&#2352;&#2375;&#2306;
</value>
					</text>
					<text id="flag-flag_yes-label">
						<value>&#2311;&#2360; &#2350;&#2352;&#2368;&#2395; &#2325;&#2379; &#2325;&#2352;&#2368;&#2348; &#2344;&#2367;&#2327;&#2352;&#2366;&#2344;&#2368; &#2325;&#2368; &#2395;&#2352;&#2369;&#2352;&#2340; &#2361;&#2376;
</value>
					</text>
					<text id="patient_notes-label">
						<value>&#2350;&#2352;&#2368;&#2395; &#2325;&#2375; &#2344;&#2379;&#2335;&#2381;&#2360;:
</value>
					</text>
					<text id="flag_notes/remove_flag-label">
						<value>Click below to indicate that you would like to remove a flag previously placed on this patient.</value>
					</text>
					<text id="flag_notes/remove_flag-remove_flag_option-label">
						<value>Remove flag from this patient.</value>
					</text>
				</translation>
			</itext>
		<bind calculate="/data/meta/timeEnd" nodeset="/data/case/@date_modified" type="xsd:dateTime"/><bind calculate="/data/meta/userID" nodeset="/data/case/@user_id"/><bind calculate="instance('commcaresession')/session/data/case_id" nodeset="/data/case/@case_id"/><bind calculate="/data/nurse_flag" nodeset="/data/case/update/nurse_flag" relevant="count(/data/nurse_flag) &gt; 0"/><bind calculate="/data/flag_notes/patient_notes" nodeset="/data/case/update/patient_notes" relevant="count(/data/flag_notes/patient_notes) &gt; 0"/><setvalue event="xforms-ready" ref="/data/meta/deviceID" value="instance('commcaresession')/session/context/deviceid"/><setvalue event="xforms-ready" ref="/data/meta/timeStart" value="now()"/><bind nodeset="/data/meta/timeStart" type="xsd:dateTime"/><setvalue event="xforms-revalidate" ref="/data/meta/timeEnd" value="now()"/><bind nodeset="/data/meta/timeEnd" type="xsd:dateTime"/><setvalue event="xforms-ready" ref="/data/meta/username" value="instance('commcaresession')/session/context/username"/><setvalue event="xforms-ready" ref="/data/meta/userID" value="instance('commcaresession')/session/context/userid"/><setvalue event="xforms-ready" ref="/data/meta/instanceID" value="uuid()"/><setvalue event="xforms-ready" ref="/data/meta/appVersion" value="instance('commcaresession')/session/context/appversion"/></model>
	</h:head>
	<h:body>
		<group ref="/data/flag_notes" appearance="field-list">
			<label ref="jr:itext('flag_notes-label')"/>
			<input ref="/data/flag_notes/nurse_name">
				<label ref="jr:itext('nurse_name-label')"/>
			</input>
			<select ref="/data/flag_notes/flag">
				<label ref="jr:itext('flag-label')"/>
				<item>
					<label ref="jr:itext('flag-flag_yes-label')"/>
					<value>flag_yes</value>
				</item>
			</select>
			<input ref="/data/flag_notes/patient_notes">
				<label ref="jr:itext('patient_notes-label')"/>
			</input>
			<select1 ref="/data/flag_notes/remove_flag">
				<label ref="jr:itext('flag_notes/remove_flag-label')"/>
				<item>
					<label ref="jr:itext('flag_notes/remove_flag-remove_flag_option-label')"/>
					<value>remove_flag_option</value>
				</item>
			</select1>
		</group>
	</h:body>
</h:html>